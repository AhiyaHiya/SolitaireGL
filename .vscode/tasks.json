{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "nix: build",
      "type": "shell",
      "command": "nix",
      "args": [
        "build",
        ".#",  // ‚Üê or ".#solitaire" if not default
        "--extra-experimental-features", "nix-command flakes"
      ],
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always"
      }
    },
    {
      "label": "cmake: configure & build (dev)",
      "type": "shell",
      "command": "cmake",
      "args": ["-B", "build", "-S", ".", "-DCMAKE_BUILD_TYPE=Debug", "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON"],
      "group": "build",
      "dependsOn": "nix develop"   // if you use direnv this is automatic
    },
    {
      "label": "cmake: build only",
      "command": "cmake",
      "args": ["--build", "build"],
      "group": "build"
    }
  ]
}